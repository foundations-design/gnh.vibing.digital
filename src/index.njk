---
baseUrl: gnh.vibing.digital
title: George Nicholson Harris
# headline: NBA Dancer | Choreographer | Data Analyst
links:
   - 
      image: /assets/icons/mavericks.png
      url: 
      blendmode: normal # Default
   - 
      image: /assets/icons/bulls.png
      url: 
      blendmode: normal # Default
   - 
      image: /assets/icons/coda.png
      url: 
      blendmode: multiply
   - 
      image: /assets/icons/dailycenter.png
      url: 
      blendmode: multiply
   - 
      image: /assets/icons/purdue.png
      url:
      blendmode: multiply
titleColor: "white"
headlineColor: "#FFFFFF"
backgroundImage: "/background.png"
backgroundColor: "#000408"
lyket: false
---

{% extends "base.njk" %}
{% block content %}

   <!-- header: for introductory content -->
   <header>
      <hgroup>
         <h1 class="title">{{title}}</h1>
         <p class="headline">{{headline}}</p>
      </hgroup>
   </header>
   <main>
      <section class="links">
         {% for link in links %}
            <nav class="link">
               <a target="_blank" href="{{link.url}}" style="mix-blend-mode:{{link.blendmode}};"><img src="{{link.image}}"/></a>
            </nav>
         {% endfor %}
      </section>
   </main>

</body>

<style>
   /* layout styles for the top-level sections: header, section.links*/
   header {
      position: absolute;
      top: 10%;
      left: 5%;
      right: 5%;
      height: 25%;
      display: grid;
      place-content: flex-start;
   }

   main {
      position: absolute;
      bottom: 10%;
      right: 5%;
      left: 5%;
      height: 52%;
      display: grid;
      place-content: center flex-end;
   }
</style>

<style>

   /*styles for WITHIN the top-level sections: header, section.links*/

   * {
      font-family: "Fraunces Variable";
   }

   header hgroup {
      width: max-content;
      height: max-content;
   }

   h1.title {
      font-size: clamp(16px, 25lvw, 160px);
      text-align: left;
      width: min-content;
      font-variation-settings: "WONK" 1, "opsz" 144, "SOFT" 22, "wght" 900;
      color: {{titleColor}};
      margin: 0;
      line-height: 1;
   }

   p.headline {
      font-size: clamp(16px, 4lvw, 180px);
      font-variation-settings: "WONK" 1, "opsz" 144, "SOFT" 0, "wght" 527;
      color: {{headlineColor}};
      text-align: right;
      margin-top: -0.5rem;
      margin-right: 0.5em;
      letter-spacing: 0.09em;
      opacity: 0.9;
   }

   section.links {
      max-height: 48lvh;
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
      flex-wrap: wrap;
      direction: rtl;
      width: max-content;
      margin-right: var(--space-md);
   }

   section.links img {
      max-width: 50px;
   }
</style>

{% endblock %}